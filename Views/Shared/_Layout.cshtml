                <li><a class="btn-flat waves-effect waves-light"><i class="material-icons">insert_photo</i><span>Galeri</span></a></li>
                <li>
                    <a class="btn-flat waves-effect waves-light">
                        <i class="material-icons">insert_chart</i><span>
                            Seo
                            Ayarları
                        </span>
                    </a>
                </li>
                <li><a asp-controller="Language" asp-action="Index" class="btn-flat waves-effect waves-light"><i class="material-icons">settings</i><span>Ayarlar</span></a></li>
            </ul>
        </div>
        <div class="user-menu">
            <div class="user"></div>
        </div>
    </aside>
    <main id="Wrapper">
        <div class="content">
            @RenderBody()
        </div>
    </main>

</body>

</html>
