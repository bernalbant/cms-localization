@model IEnumerable<CmsLocalization.DB.Language>

@{
    ViewData["Title"] = "Languages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="col xs-1-1 sm-1-1 md-1-1 lg-1-1">
        <div class="inner-header">
            <div class="col xs-1-2 sm-1-2 md-1-2 lg-1-2">
                <div class="page-title">
                    Yüklü Diller
                </div>
            </div>
            <div class="col xs-1-2 sm-1-2 md-1-2 lg-1-2 right-align">
                <a asp-controller="Language" asp-action="Create" class="btn btn-rounded waves-effect waves-light"> Yeni Dii Ekle <i class="material-icons left">add</i></a>
            </div>
        </div>
        <div class="table">
            <div class="t-head">
                <div class="t-row">
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">Ad</div>
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">Dil kültürü</div>
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">Benzersiz SEO kodu</div>
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">Yayınlandı</div>
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">Oluşturan</div>
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">Görüntüleme Sırası</div>
                    <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5 right-align">İşlemler</div>
                </div>
            </div>
            <div class="t-body">
                @foreach (var item in Model)
                {
                    <div class="t-row">
                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">
                            <div class="page-name">@item.Name</div>
                        </div>
                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">
                            <div class="page-name">@item.LanguageCulture</div>
                        </div>
                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">
                            <div class="page-name">@item.UniqueSeoCode</div>
                        </div>
                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">
                            <div class="switch">
                                <label>
                                    Offline
                                    @if (item.IsActive)
                                    {
                                        <input type="checkbox" checked disabled="disabled" id="page-button">
                                    }
                                    else
                                    {
                                        <input type="checkbox" disabled="disabled" id="page-button">
                                    }
                                    <span class="lever"></span>
                                    Online
                                </label>
                            </div>
                        </div>

                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">
                            @item.CreatedTime <div class="log">@item.CreatedBy</div>
                        </div>
                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5">
                            <div class="page-name">@item.DisplayOrder</div>
                        </div>
                        <div class="t-cell col xs-1-5 sm-1-5 md-1-5 lg-1-5 right-align">
                            @*<a class='dropdown-trigger btn-flat' href='#' data-target='page-settigns'><i class="material-icons">more_vert</i></a>*@
                            <ul>
                                <li><a asp-action="Edit" asp-route-id="@item.Id"> Düzenle</a></li>
                                <li><a asp-action="Delete" asp-route-id="@item.Id">Sil</a></li>
                            </ul>
                        </div>
                    </div>
                }
            </div>
            <div class="list-footer"></div>
        </div>
    </div>
    <br>
</div>