@model CmsLocalization.Models.LanguageModel

@{
    ViewData["Title"] = "Edit language";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col xs-1-1 sm-1-1 md-1-1 lg-1-1">
    <div class="inner-header">
        <div class="col xs-1-1 sm-1-3 md-1-3 lg-1-3">
            <div class="page-title">
                Edit language
            </div>
        </div>
    </div>
    <div class="card">
        <form asp-action="Edit" method="post">
            <partial name="_CreateOrUpdate" />
            <input asp-for="Id" type="hidden" />
            <div class="col xs-1-1 sm-1-1 md-1-1 lg-1-1 right-align">
                <div class="input-field">
                    <input type="submit" class="btn btn-rounded" value="Save" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Languages</a>
</div>